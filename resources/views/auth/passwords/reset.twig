{% extends "layouts/simple" %}

{% block content %}
    <div class="middle-box text-center loginscreen animated fadeInDown p-xxlg-top">
        <div>
            <img src="{{ asset('logo.png') }}" alt="Br24 logo">
        </div>

        <h3>Welcome to Br24 Salary Tool</h3>
        <h2 class="font-bold">Reset password</h2>

        <p>Enter your email address and new password. It will be reset.</p>

        {% if session('status') %}
            <div class="alert alert-success" role="alert">
                {{ session('status') }}
            </div>
        {% endif %}

        <form method="POST" action="{{ route('password.update') }}">
            {{ csrf_field() }}
            <input type="hidden" name="token" value="{{ token }}">
            <div class="form-group {{ errors.has('email') ? ' is-invalid' : '' }}">{% set value = old('email') ? old('email') : email %}
                <input id="email" type="email" class="form-control {{ errors.has('email') ? ' is-invalid' : '' }}" name="email" value="{{ value }}" required autofocus placeholder="E-mail Address">
                {% if errors.has('email') %}
                    <span class="invalid-feedback" role="alert">
                        <strong>{{ errors.first('email') }}</strong>
                    </span>
                {% endif %}
            </div>

            <div class="form-group {{ errors.has('email') ? ' is-invalid' : '' }}">{% set value = old('password') ? old('password') : password %}
                <input id="password" type="password" class="form-control {{ errors.has('password') ? ' is-invalid' : '' }}" name="password" required placeholder="Password">
                {% if errors.has('password') %}
                    <span class="invalid-feedback" role="alert">
                        <strong>{{ errors.first('password') }}</strong>
                    </span>
                {% endif %}
            </div>

            <div class="form-group {{ errors.has('email') ? ' is-invalid' : '' }}">
                <input id="password-confirm" type="password" class="form-control" name="password_confirmation" required placeholder="Password Confirmation">
            </div>

            <button type="submit" class="btn btn-primary block full-width m-b">{{ trans('message.reset_password') }}</button>
        </form>

        <div class="row">
            <div class="col-lg-12">
                <p class="text-muted text-center"><small>Go Back</small></p>
                <a class="btn btn-sm btn-white btn-block" href="{{ route('login') }}">Login</a>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-6">
                Copyright Br24 Vietnam
            </div>
            <div class="col-md-6 text-right">
                <small>Â© 2019</small>
            </div>
        </div>
    </div>
{% endblock %}



